package com.cbse.promo.model;

public class PromoCriteria {
    private int id;
    private String description;
    private String promoCode; // Promo code associated with this criteria
    private String conditionType;
    private String conditionValue;

    public PromoCriteria(int id, String description, String promoCode, String conditionType, String conditionValue) {
        this.id = id;
        this.description = description;
        this.promoCode = promoCode;
        this.conditionType = conditionType;
        this.conditionValue = conditionValue;
    }

    // Getters and Setters
    public int getId() {
        return id;
    }

    public void setId(int id) {
        this.id = id;
    }

    public String getDescription() {
        return description;
    }

    public void setDescription(String description) {
        this.description = description;
    }

    public String getPromoCode() {
        return promoCode;
    }

    public void setPromoCode(String promoCode) {
        this.promoCode = promoCode;
    }

    public String getConditionType() {
        return conditionType;
    }

    public void setConditionType(String conditionType) {
        this.conditionType = conditionType;
    }

    public String getConditionValue() {
        return conditionValue;
    }

    public void setConditionValue(String conditionValue) {
        this.conditionValue = conditionValue;
    }
}
